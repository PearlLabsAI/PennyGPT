/* chat.css */
Screen {
    background: #2e2e2e;
}

ChatInput {
    background: #1e1e1e;
    color: #fff;
    border: solid #444;
}

#app_grid {
    grid-size: 2;
    grid-columns: 1fr 3fr;
}

#main_container {
    height: 80%;
}

#chat_display {
    border: solid #ccc; /* Specify border type and color */
    padding: 1; /* Use 1, 2, or 4 integers for padding */
    margin-bottom: 1; /* Use 1, 2, or 4 integers for margin */
    height: 100%; /* Use a valid unit for height */
    overflow: auto;
}

#chat_grid {
    grid-size: 1;
    grid-rows: 75% 25%;
    padding: 1 1 1 1; /* Use 1, 2, or 4 integers for padding */
}

#input_container {
    align: center middle; /* Use 'align' with two values */
}

#send_button {
    margin-left: 1; /* Use 1, 2, or 4 integers for margin */
    padding: 1 2; /* Use 1, 2, or 4 integers for padding */
    background: #007bff;
    border: none;
    border-right: solid #ccc; /* Use 'border-right' with a valid border type and color */
}


